<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="nz.co.greenjersey.inventorytracker.Misc.MainMenu">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="479dp"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textSize="20sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/batchAssign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="batchAssign"
            android:text="Assign Bikes To Customer" />

        <Button
            android:onClick="batchCheckIn"
            android:id="@+id/batchCheckIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Bikes in" />

        <Button
            android:onClick="addMaintenanceNote"
            android:id="@+id/addMaintenanceNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Maintenance Notes" />

        <Button
            android:onClick="addBike"
            android:id="@+id/addBike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Bike To Database" />

        <Button
            android:id="@+id/removeBikeFromOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="removeBike"
            android:text="Remove Bikes From Customer Order"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
